<!DOCTYPE html>
<html>
<head>
  <title>Newmerger</title>
  <meta charset="utf-8" />
  <!-- use the following meta to force IE use its most up to date rendering engine -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body class="no-skin">


<div id="navbar" class="navbar navbar-default">
 <div id="navbar-container" class="navbar-container">

    <!-- toggle buttons are here or inside brand container -->

    <div class="navbar-header pull-left">
      <!-- brand text here -->
      <a href="#" class="navbar-brand">
        <small>
          <i class="ace-icon fa fa-leaf"></i>
          Ace Admin
        </small>
      </a>
    </div><!-- /.navbar-header -->


    <div class="navbar-buttons navbar-header pull-right ">
      <ul class="nav ace-nav">
        <li class="light-blue">
        <a data-toggle="dropdown" href="#" class="dropdown-toggle">
          <img class="nav-user-photo" src="/avatars/avatar.png" alt="Jason's Photo" />
          <span class="user-info">
            <small>Welcome,</small> Jason
          </span>
          <i class="ace-icon fa fa-caret-down"></i>
        </a>
        <ul class="user-menu dropdown-menu dropdown-menu-right dropdown-yellow dropdown-caret dropdown-close">
          <li><a href="#"><i class="ace-icon fa fa-cog"></i> Settings</a></li>
          <li class="divider"></li>
          <li><a href="#"><i class="ace-icon fa fa-power-off"></i> Logout</a></li>
        </ul>
        </li>
      </ul>
    </div><!-- /.navbar-buttons -->


    <nav class="navbar-menu pull-left">
      <!-- optional menu & form inside navbar -->
    </nav><!-- /.navbar-menu -->

 </div><!-- /.navbar-container -->
</div><!-- /.navbar -->

<div class="main-container" id="main-container">
  <div class="sidebar responsive" id="sidebar">
    <div class="sidebar-shortcuts" id="sidebar-shortcuts">

      <div class="sidebar-shortcuts-large" id="sidebar-shortcuts-large">
        <button class="btn btn-success"><i class="ace-icon fa fa-signal"></i></button>
        <button class="btn btn-info"><i class="ace-icon fa fa-pencil"></i></button>
        <button class="btn btn-warning"><i class="ace-icon fa fa-users"></i></button>
        <button class="btn btn-danger"><i class="ace-icon fa fa-cogs"></i></button>
      </div>

      <div class="sidebar-shortcuts-mini" id="sidebar-shortcuts-mini">
        <span class="btn btn-success"></span>
        <span class="btn btn-info"></span>
        <span class="btn btn-warning"></span>
        <span class="btn btn-danger"></span>
      </div>
    </div>

    <ul class="nav nav-list">

      <li class="">
      <%= link_to buyer_finder_index_path do %>
        <i class="menu-icon fa fa-picture-o"></i>
        <span class="menu-text"> 找买家 </span>
      <% end -%>
      <b class="arrow"></b>
      </li>

      <li class="">
      <%= link_to target_finder_index_path do %>
        <i class="menu-icon fa fa-picture-o"></i>
        <span class="menu-text"> 找标的 </span>
      <% end -%>
      <b class="arrow"></b>
      </li>

      <li class="hsub open">
      <a href="##help" class="dropdown-toggle">
        <i class="menu-icon fa fa-desktop"></i>
        <span class="menu-text"> 找机会 </span>
        <b class="arrow fa fa-angle-down"></b>
      </a>

      <b class="arrow"></b>

      <ul class="submenu nav-show" style="display: block;">
        <li class="hsub">
        <%= link_to chance_finder_get_shell_companies_path, class: '' do %>
          <i class="menu-icon fa fa-caret-right"></i>
          壳公司
        <% end -%>
        </li>

        <li class="">
        <%= link_to chance_finder_get_rich_buyers_path do %>
          <i class="menu-icon fa fa-caret-right"></i>
          土豪买家
        <% end -%>

        <b class="arrow"></b>
        </li>

        <li class="">
        <%= link_to chance_finder_get_aggressive_buyers_path do %>
          <i class="menu-icon fa fa-caret-right"></i>
          急进买家
        <% end -%>

        <b class="arrow"></b>
        </li>
      </ul>
      </li>
    </ul>
  </div><!-- /.sidebar -->

  <div class="main-content">
    <div id="breadcrumbs" class="breadcrumbs">
      <%= yield(:breadcrumb) %>
    </div>

    <div class="page-content">
      <div class="page-content-area">
        <div class="page-header">
          <%= yield :page_header %>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <%= flash_messages %>
            <%= yield %>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div>
    </div><!-- /.page-content -->
  </div><!-- /.main-content -->

</div><!-- /.main-container -->

<%= javascript_include_tag 'application' %>
<!-- list of script files -->

</body>
</html>
