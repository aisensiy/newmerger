var recomand_targets_widget_id = '#recommand_target_widget';
if ($(recomand_targets_widget_id).size()) {
  $(recomand_targets_widget_id).remove();
}
$('<%= j render 'recomand_targets', target_attrs: @target_attrs, targets: @result %>').insertAfter('#pre_results');
setTimeout(function() {
  $('#recommand_target_widget table').tablesorter({
    headers : { 0: { sorter: false } }
  });
}, 50);

// scroll to view
var offset = $(recomand_targets_widget_id).offset();
$('body').animate({
  scrollTop: offset.top - 20,
  scrollLeft: offset.left
});
