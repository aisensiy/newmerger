<% content_for :page_header do %>
<h1>找壳公司</h1>
<% end %>
<div class="row">
  <div class="col-xs-8">
    <div class="widget-box">
      <div class="widget-header">
        <h4 class="widget-title smaller">输入相应的参数</h4>
      </div>
      <div class="widget-body">
        <div class="widget-main no-padding">
          <form action="" method="get" accept-charset="utf-8" class="form-inline">
            <fieldset>
              <label for="">公司业绩</label>
              <input type="text" name="" id="" value="" class="input-small" />
              <label for="增长率">增长率</label>
              <input type="text" name="" id="" value="" class="input-small" />
