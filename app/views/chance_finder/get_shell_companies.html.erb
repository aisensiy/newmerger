              <input type="text" name="" id="" value="" class="input-small" />
            </fieldset>
            <div class="form-actions center">
              <button type="submit" class="btn btn-sm btn-success">
                Submit
                <i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="hr hr32 hr-dotted" id="pre_attrs_widget"></div>
    <div class="widget-box bargains" id="recommand_target_widget">
      <div class="widget-header">
        <h4 class="widget-title smaller">结果列表</h4>
        <div class="widget-toolbar">
          <a data-action="fullscreen" class="orange2" href="#"><i class="ace-icon fa fa-expand"></i></a>
          <a data-action="collapse" href="#"><i class="ace-icon fa fa-chevron-up"></i></a>
        </div>
      </div>
      <div class="widget-body">
        <div class="widget-main no-padding" id="recommand_target_container">
          <form>
            <table id="target_attr_filter" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th class="center">
                    <label class="position-relative">
                      <input type="checkbox" class="ace">
                      <span class="lbl"></span>
                    </label>
                  </th>
                  <th>公司名称</th>
                  <th>行业</th>
                </tr>
              </thead>

              <tbody>
              <% 5.times do %>
              <tr>
                <td class="center">
                  <label class="position-relative">
                    <input type="checkbox" name="" class="ace">
                    <span class="lbl"></span>
                  </label>
                </td>
                <td>
                  公司名称
                </td>
                <td>制造业</td>
              </tr>
              <% end -%>
              </tbody>
            </table>
            <div class="form-actions center">
              <button type="submit" class="btn btn-sm btn-success">
                Submit
                <i class="ace-icon fa fa-arrow-right icon-on-right bigger-110"></i>
              </button>
            </div>
          </form>
        </div>
      </div><!-- end widget-body -->
    </div><!-- end widget box -->
