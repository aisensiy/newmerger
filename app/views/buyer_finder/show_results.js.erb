var recomand_buyers_widget_id = '#recommand_buyer_widget';
if ($(recomand_buyers_widget_id).size()) {
  $(recomand_buyers_widget_id).remove();
}
$('<%= j render 'recomand_buyers', buyer_attrs: @buyer_attrs, buyers: @result %>').insertAfter("#pre_results")
setTimeout(function() {
  $('#recommand_buyer_widget table').tablesorter({
    headers : { 0: { sorter: false } }
  });
}, 50);

// scroll to view
var offset = $(recomand_buyers_widget_id).offset();
$('body').animate({
  scrollTop: offset.top - 20,
  scrollLeft: offset.left
});
